<!doctype html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/stylesheets/normalize.css">
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,700italic,700,300">
    <link rel="stylesheet" type="text/css" href="/stylesheets/lib.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
    <title>Finstagram Web App</title>
  </head>
  <body>
    <header>
      <h1>
        <a href="/">Finstagram</a>
      </h1>
      <div class="login-info">
        <% if current_user %>
          <a href="/profile">
            <img src="<%= current_user.avatar_url %>" alt="<%= current_user.username %>" width=25px height=25px>
            <%= current_user.username %>
          </a>
          <a href="/logout">Logout</a>
        <% else %>
          <a href="/login">Login</a>
          <a href="/signup">Signup</a>
        <% end %>
      </div>
    </header>
    <main role="main">
      <%= yield %>
    </main>
  </body>
</html>